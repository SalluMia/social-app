{
    "Routes": [
        {
            "DownstreamPathTemplate": "/api/{version}/{catchAll}",
            "DownstreamScheme": "http",
            "DownstreamHostAndPorts": [
                    {
                        "Host": "localhost",
                        "Port": 4000
                    }
                ],
            "UpstreamPathTemplate": "/user-api/{version}/{catchAll}"
        },
        {
            "DownstreamPathTemplate": "/api/{version}/userbios/{userId}",
            "DownstreamScheme": "http",
            "DownstreamHostAndPorts": [
                {
                    "Host": "localhost",
                    "Port": 4000
                }
            ],
            "UpstreamHttpMethod": [
                "Get"
            ],
            "UpstreamPathTemplate": "/user-api/{version}/userbios/{userId}",
            "Key": "userBio"
        },
        {
            "DownstreamHeaderTransform": {
                "Location": "http://localhost:4002/api, {BaseUrl}/post-api"
            },
             "HttpHandlerOptions": {
                "AllowAutoRedirect": false
            },
            "DownstreamPathTemplate": "/api/{version}/{catchAll}",
            "DownstreamScheme": "http",
            "DownstreamHostAndPorts": [
                    {
                        "Host": "localhost",
                        "Port": 4002
                    }
                ],
            "UpstreamPathTemplate": "/post-api/{version}/{catchAll}"
        },
        {
            "DownstreamPathTemplate": "/api/{version}/userposts/user/{userId}",
            "DownstreamScheme": "http",
            "DownstreamHostAndPorts": [
                {
                    "Host": "localhost",
                    "Port": 4002
                }
            ],
            "UpstreamHttpMethod": [
                "Get"
            ],
            "UpstreamPathTemplate": "/post-api/{version}/userposts/user/{userId}",
            "Key": "userPost"
        }
    ],
    "Aggregates": [
        {
            "RouteKeys": [
                "userBio",
                "userPost"
            ],
            "UpstreamPathTemplate": "/api/{version}/user-profile/{userId}"
        }
    ],
    "GlobalConfiguration": {
        "BaseUrl": "http://localhost:8080"
    }
}